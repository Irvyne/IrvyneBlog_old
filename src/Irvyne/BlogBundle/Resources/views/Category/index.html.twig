<h1>Category list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Slug</th>
            <th>Lft</th>
            <th>Rgt</th>
            <th>Root</th>
            <th>Level</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('category_show', { 'slug': entity.slug }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.slug }}</td>
            <td>{{ entity.lft }}</td>
            <td>{{ entity.rgt }}</td>
            <td>{{ entity.root }}</td>
            <td>{{ entity.level }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('category_show', { 'slug': entity.slug }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('category_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('category_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
