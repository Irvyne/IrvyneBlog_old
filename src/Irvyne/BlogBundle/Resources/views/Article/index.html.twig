<h1>Article list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Slug</th>
            <th>Created by</th>
            <th>Updated by</th>
            <th>Public</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('article_show', { 'slug': entity.slug }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.title }}</td>
            <td>{{ entity.slug }}</td>
            <td>{{ entity.createdBy }}</td>
            <td>{{ entity.updatedBy }}</td>
            <td>{% if entity.public == true %}YES{% else %}NO{% endif %}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('article_show', { 'slug': entity.slug }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('article_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('article_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
